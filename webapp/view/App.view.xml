<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Shell>
		<App>
			<pages>
				<Page title="{i18n>page1Title}">
					<content>
						<Panel
							headerText="{i18n>panel1Title}"
							class="sapUiResponsiveMargin"
							width="auto">
							<content>
								<Button
									text="Click Here"
									class="sapUiSmallMarginEnd"/>
								<Input
									value="{/name}"
									valueLiveUpdate="true"
									description="Hello {/name}"
									width="60%"/>
								<Text
									text="Hello {/name}"
									class="sapUiSmallMargin"/>
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>